<%= link_to 'Edit', edit_subscriber_path(@subscriber), class:'button' %>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<% cache ["v1", @subscriber] do %>
<h1><%= @subscriber %></h1>
<h2 <%= raw 'class="red"' unless @subscriber.confirmed?%>>
  <%= @subscriber.confirmed? ? 'Confirmed by Email' : 'Not Yet Confirmed' %></h2>

<table>
  <% if @subscriber.name %>
  <tr>
    <th>Name</th>
    <td><%= @subscriber.name %></td>
  </tr>
  <% end %>
  <tr>
    <th>Email</th>
    <td><%= @subscriber.email %></td>
  </tr>
  <% if @subscriber.phone %>
  <tr>
    <th>Phone</th>
    <td><%= number_to_phone(@subscriber.phone) %></td>
  </tr>
  <% end %>
</table>

<% if @subscriber.requests.any? %>
<h2>Requests</h2>

<table>
  <tr>
    <th>Vehicle</th>
    <th>Body Type</th>
  </tr>
  <% @subscriber.requests.each do |request| %>
  <tr>
    <td>
      <%= request.vehicle ? link_to(request.vehicle, request.vehicle) : '---' %>
    </td>
    <td>
      <%= request.body_type || '---' %>
    </td>
  </tr>
  <% end %>
</table>
<% end %>

<% end %>