<%= index_title_helper(Page) %>

<%= new_and_toggle_buttons %>


<table class="full-width">
  <tr>
    <th>Page</th>
    <th>Active</th>
    <th>Featured Visible?</th>
    <th>Manage</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= link_to page.name, edit_page_path(page), class: 'big' %><br>
      <%= link_to "#{request.host}#{slug_path(page.slug)}", slug_url(page.slug), {class: 'small gray', 'small-text' => slug_path(page.slug)} if page.active%>
    </td>
    <td <%= raw page.active ? 'class= "centered green">✓' : 'class= "centered red">✗' %></td>
    <td <%= raw page.featured ? 'class= "centered green">✓' : 'class= "centered red">✗' %></td>
    <td><%= manage_buttons(page) %></td>
  </tr>
<% end %>
</table>
