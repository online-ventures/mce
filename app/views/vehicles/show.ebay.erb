<!doctype html>
<html>
<head>
  <title><%= @vehicle %></title>
  <link rel="icon" type="image/png" href="<%= image_path('favicon.ico') %>"/>
  <%= stylesheet_link_tag 'vehicles/ebay' %>
</head>
<body class="ebay vehicle">
	<div class="container">
	  <div class="featured">
		<h1 class="name"><%= @vehicle %></h1>
	    <img src="<%= @vehicle.featured_url %>"/>
	    <h1 class="subtitle"><%= @vehicle.subtitle %></h1>
	  </div>
	  <div class="title-box">
	    <h3>Vehicle Information</h3>
	    <table>
	      <tr>
	        <th>Year</th>
	        <td><%= @vehicle.year %></td>
	        <th>Title</th>
	        <td><%= @vehicle.title.name %></td>
	      </tr>
	      <tr>
	        <th>Make</th>
	        <td><%= @vehicle.make.name %></td>
	        <th>Warranty</th>
	        <td><%= @vehicle.warranty.name %></td>
	      </tr>
	      <tr>
	        <th>Model</th>
	        <td><%= @vehicle.model.name %></td>
	        <th>Engine</th>
	        <td><%= @vehicle.engine_type %></td>
	      </tr>
	      <tr>
	        <th>Exterior Color</th>
	        <td><%= @vehicle.ext_color.name %></td>
	        <th>Stock #</th>
	        <td><%= @vehicle.stock_number %></td>
	      </tr>
	    </table>
	  </div>
	  <div class="title-box">
	    <h3>Vehicle Condition</h3>
	    <table>
	      <tr>
	        <th>Exterior Paint</th>
	        <td><%= @vehicle.paint.name %></td>
	        <th>Interior</th>
	        <td><%= @vehicle.interior.name %></td>
	      </tr>
	      <tr>
	        <th>Engine</th>
	        <td><%= @vehicle.engine.name %></td>
	        <th>Suspension</th>
	        <td><%= @vehicle.suspension.name %></td>
	      </tr>
	      <tr>
	        <th>Drivability</th>
	        <td><%= @vehicle.drivable.name %></td>
	      </tr>
	    </table>
	  </div>

	  <div class="title-box">
	    <h3>Vehicle Description</h3>
	    <p><%= @vehicle.description %></p>
	  </div>

	  <% if @vehicle.title.about %>
	  <div class="title-box">
	    <h3>About The Title</h3>
	    <p><%= @vehicle.title.about %></p>
	  </div>
	  <% end %>

	  <div class="title-box">
	    <h3>Disclosure Agreement</h3>
	    <p><%= @vehicle.warranty.about(@vehicle) %></p>
	  </div>

	  <div class="title-box">
	    <h3>Photos</h3>
	    <% @vehicle.photos.find_each do |photo| %>
	        <%= image_tag photo.image.url %>
	    <% end %>
	  </div>
	</div>
</body>
</html>