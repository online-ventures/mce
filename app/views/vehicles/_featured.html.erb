<% vehicle = Vehicle.random_featured.first %>

<% cache ["v2", vehicle, "featured"] do %>
    <div id="featured-content">
      <div class="large-12 columns featured-column">
        <div class="row">
          <div class="car small-12 large-centered columns">
            <div class="row">
              <div class="picture large-3 columns" style="background-image: url(<%= vehicle.featured_url %>)"></div>
              <div class="info large-9 columns">
                <h2><%= vehicle %><%= show_if "  <span class='small-0 no-wrap'>&mdash; $1</span>", price(vehicle) %></h2>
                <%= show_if '<h4>$1</h4>', vehicle.subtitle %>
                <h4>Only <%= miles(vehicle) %> Miles!</h4>
                <div class="links">
                    <a href="<%= seo_vehicle_path(vehicle, name: vehicle.to_s('-')) %>" class="small more-info radius button" small-text="More Info">Click Here For More Info</a>
                    <a href="<%= inventory_vehicles_path %>" class="success small radius button">Show Me More Cars &raquo;</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>