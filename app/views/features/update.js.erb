<%
if @method == :added
	list = '.vehicle'
	icon = 'fa fa-minus'
	aos = 'subable'
else
	list = '.system'
	icon = 'fa fa-plus'
	aos = 'addable'
end
%>

$feature = $('.feature[data-id=<%= @feature.id %>]');
$feature.find('i').attr('class', '<%= icon %>');
$feature.removeClass('addable subable').addClass('<%= aos %>');

$('<%= list %> .list').prepend($feature);
