<%= form_for(@vehicle, url: vehicle_features_path(@vehicle), method: :post, remote: true) do |f| %>

	<div class="row collapse">
	    <div class="large-8 columns">
	        <%= fields_for :feature do |features| %>
				<%= features.text_field :name %>
			<% end %>
	    </div>
	    <div class="large-4 columns">
	        <%= f.submit 'Save Changes', style:'display:none;' %>
			<%= content_tag :button, 'Save Changes', class: 'postfix button' %>
	    </div>
	</div>

<% end %>

<p class="alert-box alert"></p>